#!/usr/bin/env bash

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ll='ls -l'
alias la='ls -la'
alias duchs='du -chs'
alias ducks='du -cks'
alias ocaml='rlwrap ocaml'
alias q='rlwrap q'

[[ $(uname -s) = Linux ]] && alias ls='ls --color=auto'
[[ $(uname -s) = Linux ]] && alias ll='ls -l --color=auto'
[[ $(uname -s) = Linux ]] && alias la='ls -la --color=auto'
[[ $(uname -s) = Linux ]] && alias grep='grep --color=auto'
[[ $(uname -s) = Linux ]] && alias egrep='egrep --color=auto'
[[ $(uname -s) = Linux ]] && alias fgrep='fgrep --color=auto'

[[ $(uname -s) = Darwin ]] && alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs'
